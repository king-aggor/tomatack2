generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Farmer{
  id Int @id @default(autoincrement())
  name String
  digital_address String
  region String
  contact String
  email String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  products Product[]
  // requests wholesaler_request[]
}

model Wholesaler{
  id Int @id @default(autoincrement())
  name String
  digital_address String
  region String
  contact String 
  email String?

  products Product[]
  // requests wholesaler_request[]
}

model Retailer{
  id Int @id @default(autoincrement())
  name String
  digital_address String
  region String
  contact String 
  email String?

  products Product[]
}

model Transporter{
  id Int @id @default(autoincrement())
  name String
  digital_address String
  region String
  contact String 
  email String?
}

model Product{
  batch_no Int @id @default(autoincrement())
  variety String
  quantity Int 
  harvest_date DateTime
  sold_date DateTime?
  price Decimal
  request Json?
  image String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  farmerId Int
  farmer Farmer @relation(fields: [farmerId], references: [id])

  wholesalerId Int?
  wholesaler Wholesaler? @relation(fields: [wholesalerId], references: [id])

  retailerId Int?
  retailer Retailer? @relation(fields: [retailerId], references: [id])

  // requests wholesaler_request[]
} 

